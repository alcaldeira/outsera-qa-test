{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "type": "object",
  "required": ["id", "title", "price", "stock", "rating", "thumbnail", "description", "brand", "category"],
  "properties": {
    "id": { "type": "integer" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "price": { "type": "number" },
    "discountPercentage": { "type": "number" },
    "rating": { "type": "number" },
    "stock": { "type": "integer" },
    "brand": { "type": "string" },
    "category": { "type": "string" },
    "thumbnail": { "type": "string" }
  }
}
